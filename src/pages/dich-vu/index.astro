---
import PageBanner from "../../components/shared/PageBanner.astro";
import NddichVu from "../../components/dich-vu/nddich-vu.astro";
import Layout from "../../layouts/Layout.astro";

// Dữ liệu mẫu tĩnh cho trang dịch vụ
const samplePageTitle = "Dịch Vụ Thiết Kế & Thi Công Nội Thất (Mẫu)";
const samplePageDescription = "Khám phá các dịch vụ thiết kế và thi công nội thất chuyên nghiệp của Nội Thất V5 với dữ liệu mẫu.";
const samplePageKeywords = "dịch vụ nội thất mẫu, thiết kế nội thất mẫu, thi công nội thất mẫu";

const sampleBannerTitle = "Tiêu đề Banner Mẫu";
const sampleBannerSubtitle = "Mô tả Banner Mẫu";
const sampleBannerImageUrl = "https://rcong.vn/home/wp-content/uploads/2024/12/Hoang-My-rcong-1.jpg";

---

<Layout
  title={samplePageTitle}
  description={samplePageDescription}
  keywords={samplePageKeywords}
>
  <PageBanner 
    title={sampleBannerTitle}
    subtitle={sampleBannerSubtitle}
    imageUrl={sampleBannerImageUrl}
  />
  <NddichVu />
</Layout>
