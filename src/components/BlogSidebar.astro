---
import type { ArticleCategory } from "../lib/types/bai-viet";

interface Props {
  categories: ArticleCategory[];
}

const { categories } = Astro.props;
---

<aside class="blog-sidebar">
  <div class="sidebar-section search-section">
    <h3>Tìm kiếm</h3>
    <form action="/bai-viet/" method="get">
      <input type="text" name="q" placeholder="Tìm kiếm bài viết..." aria-label="Tìm kiếm bài viết" />
      <button type="submit">Tìm</button>
    </form>
  </div>

  <div class="sidebar-section categories-section">
    <h3>Danh mục</h3>
    <ul>
      {categories.length > 0 ? (
        categories.map((category) => (
          <li>
            <a href={`/bai-viet/?category=${category.slug}`}>{category.tendanhmucbaiviet}</a>
          </li>
        ))
      ) : (
        <li>Không có danh mục nào.</li>
      )}
    </ul>
  </div>
</aside>